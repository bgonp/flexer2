{% extends 'base.html.twig' %}

{% block title %}Editar disciplina{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-6">
            <h2>Editar disciplina</h2>
            <form action="" method="post">
                <div class="form-group">
                    <label for="discipline-name">Nombre</label>
                    <input id="discipline-name" name="name" type="text" class="form-control" value="{{ discipline.name }}"/>
                </div>
                <div class="form-group">
                    <label for="discipline-name">Descripci√≥n</label>
                    <input id="discipline-name" name="description" type="text" class="form-control" value="{{ discipline.description }}"/>
                </div>
                <div class="form-group">
                    <label for="discipline-name">URL</label>
                    <input id="discipline-name" name="url" type="text" class="form-control" value="{{ discipline.url }}"/>
                </div>
                {% if canEdit %}
                    <button type="submit" class="btn btn-primary btn-block">Editar</button>
                    <a href="{{ path('discipline_delete', {id: discipline.id}) }}" class="btn btn-danger btn-block confirmable">Borrar</a>
                {% endif %}
            </form>
            <a href="{{ path('discipline_index') }}">Volver a la lista</a>
        </div>
    </div>
{% endblock %}
