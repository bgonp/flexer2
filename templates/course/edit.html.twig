{% extends 'base.html.twig' %}

{% block title %}Editar curso{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-6">
            <h2>Editar curso</h2>
            <form action="" method="post" class="mb-2">
                {% include 'common/field.html.twig' with
                    {type: 'select', options: daysOfWeek(), entity: 'course', name: 'dayOfWeek', label: 'DÃ­a', value: course.dayOfWeek[0], required: true} only %}

                {% include 'common/field.html.twig' with
                    {type: 'time', entity: 'course', name: 'time', label: 'Hora', value: course.time|formatTime, required: true} only %}

                {% include 'common/field.html.twig' with
                    {type: 'select', options: schools, entity: 'course', name: 'school', label: 'Escuela', value: course.school, required: true} only %}

                {% include 'common/field.html.twig' with
                    {type: 'select', options: places, entity: 'course', name: 'place', label: 'Lugar', value: course.place} only %}

                {% include 'common/field.html.twig' with
                    {type: 'select', options: disciplines, entity: 'course', name: 'discipline', label: 'Disciplina', value: course.discipline} only %}

                {% include 'common/field.html.twig' with
                    {type: 'select', options: levels, entity: 'course', name: 'level', label: 'Nivel', value: course.level} only %}

                {% include 'common/field.html.twig' with
                    {type: 'select', options: ages, entity: 'course', name: 'age', label: 'Edad', value: course.age} only %}

                {% include 'common/field.html.twig' with
                    {type: 'checkbox', entity: 'course', name: 'active', label: 'Activo', value: course.active} only %}

                {% if canEdit %}
                    <button type="submit" class="btn btn-primary btn-block">Editar</button>
                    <a href="{{ path('course_delete', {id: course.id}) }}" class="btn btn-danger btn-block confirmable">Borrar</a>
                {% endif %}
            </form>
            <a href="{{ path('course_index', {type: 'active'}) }}">Volver a la lista</a>
        </div>
    </div>
{% endblock %}
