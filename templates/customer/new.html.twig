{% extends 'base.html.twig' %}

{% block title %}Crear alumno{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-6">
            <h2>Crear alumno</h2>
            <form action="{{ path('customer_new') }}" method="post">
                {% include 'common/field.html.twig' with
                    {type: 'text', entity: 'customer', name: 'name', label: 'Nombre', value: name, required: true} only %}

                {% include 'common/field.html.twig' with
                    {type: 'text', entity: 'customer', name: 'surname', label: 'Apellidos', value: surname} only %}

                {% include 'common/field.html.twig' with
                    {type: 'date', entity: 'customer', name: 'birthdate', label: 'Fecha de nacimiento', value: birthdate} only %}

                {% include 'common/field.html.twig' with
                    {type: 'email', entity: 'customer', name: 'email', label: 'E-mail', value: email} only %}

                {% include 'common/field.html.twig' with
                    {type: 'text', entity: 'customer', name: 'phone', label: 'Tel√©fono', value: phone} only %}

                {% include 'common/field.html.twig' with
                    {type: 'text', entity: 'customer', name: 'notes', label: 'Observaciones', value: notes} only %}

                <button type="submit" class="btn btn-primary btn-block">Guardar</button>
            </form>
            <a href="{{ path('customer_index') }}">Volver a la lista</a>
        </div>
    </div>
{% endblock %}
