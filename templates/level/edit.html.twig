{% extends 'base.html.twig' %}

{% block title %}Editar nivel{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-6">
            <h2>Editar nivel</h2>
            <form action="" method="post">
                <div class="form-group">
                    <label for="level-name">Nombre</label>
                    <input id="level-name" name="name" type="text" class="form-control" value="{{ level.name }}"/>
                </div>
                <div class="form-group">
                    <label for="level-name">Descripci√≥n</label>
                    <input id="level-name" name="description" type="text" class="form-control" value="{{ level.description }}"/>
                </div>
                <div class="form-group">
                    <label for="level-name">URL</label>
                    <input id="level-name" name="url" type="text" class="form-control" value="{{ level.url }}"/>
                </div>
                {% if canEdit %}
                    <button type="submit" class="btn btn-primary btn-block">Editar</button>
                {% endif %}
            </form>
            <a href="{{ path('level_index') }}">Volver a la lista</a>
        </div>
    </div>
{% endblock %}
