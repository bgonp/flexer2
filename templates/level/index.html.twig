{% extends 'base.html.twig' %}

{% block title %}Niveles{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <h2>Niveles <a href="{{ path('level_new') }}" class="btn btn-primary">Nuevo</a></h2>
            <table class="table table-sm table-hover">
                <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripci√≥n</th>
                    <th scope="col">URL</th>
                </tr>
                </thead>
                <tbody>
                {% for level in levels %}
                    <tr class="clickable" data-href="{{ path('level_edit', {id: level.id}) }}">
