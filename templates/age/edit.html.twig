{% extends 'base.html.twig' %}

{% block title %}Editar edad{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-6">
            <h2>Editar edad</h2>
            <form action="" method="post">
                <div class="form-group">
                    <label for="age-name">Nombre</label>
                    <input id="age-name" name="name" type="text" class="form-control" value="{{ age.name }}"/>
                </div>
                <div class="form-group">
                    <label for="age-description">Descripci√≥n</label>
                    <input id="age-description" name="description" type="text" class="form-control" value="{{ age.description }}"/>
                </div>
                <div class="form-group">
                    <label for="age-url">URL</label>
                    <input id="age-url" name="url" type="text" class="form-control" value="{{ age.url }}"/>
                </div>
                {% if canEdit %}
                    <button type="submit" class="btn btn-primary btn-block">Editar</button>
                    <a href="{{ path('age_delete', {id: age.id}) }}" class="btn btn-danger btn-block confirmable">Borrar</a>
                {% endif %}
            </form>
            <a href="{{ path('age_index') }}">Volver a la lista</a>
        </div>
    </div>
{% endblock %}
