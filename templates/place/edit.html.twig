{% extends 'base.html.twig' %}

{% block title %}Editar lugar{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-6">
            <h2>Editar lugar</h2>
            <form action="" method="post" class="mb-2">
                {% include 'form/field.html.twig' with
                    {type: 'text', entity: 'place', name: 'name', label: 'Nombre', value: place.name, required: true} only %}

                {% include 'form/field.html.twig' with
                    {type: 'text', entity: 'place', name: 'description', label: 'Descripci√≥n', value: place.description} only %}

                {% include 'form/field.html.twig' with
                    {type: 'text', entity: 'place', name: 'url', label: 'URL', value: place.url} only %}

                {% include 'form/field.html.twig' with
                    {type: 'select', entity: 'place', name: 'zone', label: 'Zona', value: place.zone, options: zones, required: true} only %}

                {% if canEdit %}
                    <button type="submit" class="btn btn-primary btn-block">Editar</button>
                    <a href="{{ path('place_delete', {id: place.id}) }}" class="btn btn-danger btn-block confirmable">Borrar</a>
                {% endif %}
            </form>
            <a href="{{ path('place_index') }}">Volver a la lista</a>
        </div>
    </div>
{% endblock %}
