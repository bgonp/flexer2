{% extends 'base.html.twig' %}

{% block title %}Editar lugar{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-6">
            <h2>Editar lugar</h2>
            <form action="" method="post" class="mb-2">
                <div class="form-group">
                    <label for="place-name">Nombre</label>
                    <input id="place-name" name="name" type="text" class="form-control" value="{{ place.name }}"/>
                </div>
                <div class="form-group">
                    <label for="place-name">Descripci√≥n</label>
                    <input id="place-name" name="description" type="text" class="form-control" value="{{ place.description }}"/>
                </div>
                <div class="form-group">
                    <label for="place-name">URL</label>
                    <input id="place-name" name="url" type="text" class="form-control" value="{{ place.url }}"/>
                </div>
                <div class="form-group">
                    <label for="place-zone">Zona</label>
                    <select name="zone" id="place-zone" class="form-control">
                        <option></option>
                        {% for zone in zones %}
                            <option value="{{ zone.id }}"{% if place.zone.equals(zone) %} selected{% endif %}>
                                {{ zone.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                {% if canEdit %}
                    <button type="submit" class="btn btn-primary btn-block">Editar</button>
                {% endif %}
            </form>
            <a href="{{ path('place_index') }}">Volver a la lista</a>
        </div>
    </div>
{% endblock %}
