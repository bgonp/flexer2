{% set route = app.request.attributes.get('_route') %}
<nav class="navbar">
    <a href="{{ path('main') }}" class="navbar-brand">Flexer</a>
    <ul class="navbar-nav">
        <li class="nav-item{% if 'customer_index' == route %} active{% endif %}">
            <a href="{{ path('customer_index') }}" class="nav-link">Alumnos</a>
        </li>
        <li class="nav-item{% if 'discipline_index' == route %} active{% endif %}">
            <a href="{{ path('discipline_index') }}" class="nav-link">Disciplinas</a>
        </li>
        {% if app.user %}
            <li class="nav-item{% if 'app_logout' == route %} active{% endif %}">
                <a href="{{ path('app_logout') }}" class="nav-link">Logout</a>
            </li>
        {% else %}
            <li class="nav-item{% if 'app_login' == route %} active{% endif %}">
                <a href="{{ path('app_login') }}" class="nav-link">Login</a>
            </li>
        {% endif %}
    </ul>
</nav>